package towerdefensegame;

public class Player {
	private int health, money, kills;
	public Player(){
		health = 100;
		money = 500;
		kills = 0;
	}
	
	private void pay(int cost){
		money += -cost;
	}
	
	/**
	 * Player killed a enemy,  increase no of kills.
	 */
	private void killed()
	{
		kills++;
	}
	
	private void takeDamage(int damage){
		health += -damage;
	}
}


